<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="@string/the_background"
        android:textColor="@color/Black"
        android:textSize="26sp"
        android:fontFamily="@font/gothampro_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_white"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="@string/white"
        android:textColor="@color/Black"
        app:backgroundTint="@color/white"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintEnd_toStartOf="@+id/button_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_background"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_green"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:text="@string/green"
        android:textColor="@color/Black"
        app:backgroundTint="@color/green_bg"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_white"
        app:layout_constraintTop_toTopOf="@+id/button_white"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_blue"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/cyan"
        android:textColor="@color/Black"
        app:backgroundTint="@color/blue_bg"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintStart_toStartOf="@+id/button_white"
        app:layout_constraintTop_toBottomOf="@+id/button_white"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_yellow"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/yellow"
        android:textColor="@color/Black"
        app:backgroundTint="@color/yellow_bg"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintEnd_toEndOf="@+id/button_green"
        app:layout_constraintTop_toBottomOf="@+id/button_green"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_gray"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/gray"
        android:textColor="@color/Black"
        app:backgroundTint="@color/gray_bg"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintStart_toStartOf="@+id/button_blue"
        app:layout_constraintTop_toBottomOf="@+id/button_blue"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pink"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/pink"
        android:textColor="@color/Black"
        app:backgroundTint="@color/pink_bg"
        app:cornerRadius="90dp"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:layout_constraintEnd_toEndOf="@+id/button_yellow"
        app:layout_constraintTop_toBottomOf="@+id/button_yellow"
        app:strokeColor="@color/Red"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:text="@string/back_to_menu"
        android:textSize="18sp"
        android:fontFamily="@font/gothampro"
        android:textAllCaps="false"
        android:letterSpacing="0"
        app:backgroundTint="#3FB190"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>